        <label>Fotograf Linki:</label>
        @Html.TextBoxFor(k => k.FOTOGRAF, new { @class = "form-control" })
        @Html.ValidationMessageFor(k => k.FOTOGRAF, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Telefon:</label>
        @Html.TextBoxFor(k => k.TELEFON, new { @class = "form-control" })
