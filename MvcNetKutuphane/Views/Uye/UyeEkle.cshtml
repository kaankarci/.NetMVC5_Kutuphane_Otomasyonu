    <div style="margin-top:15px">
        <label>Kullanıcı adı:</label>
        @Html.TextBoxFor(k => k.KULLANICIADI, new { @class = "form-control" })
        @Html.ValidationMessageFor(k => k.KULLANICIADI, "", new { @style = "color:red" })
    </div>
