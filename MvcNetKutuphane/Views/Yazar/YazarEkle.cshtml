@model MvcNetKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form class="form-group" method="post">
    <div></div>

    <div style="margin-top:15px;">
        <label>Yazar Adı </label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Soyadı</label>
        @Html.TextBoxFor(y=>y.SOYAD,new { @class="form-control"})
    </div> 
    <div style="margin-top:15px;">
        <label>Yazar Detay</label>
           @Html.TextAreaFor(y=>y.DETAY,new { @class="form-control"})
    </div> 
    
    <button style="margin-top:15px;" class="btn btn-info">Ekle</button>
</form>