@model MvcNetKutuphane.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

 

<form class="form-group" method="post">
    <div></div>
    
    <div style="margin-top:15px">
        <label>Kitap adı:</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kategori adı:</label>
        @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.ktgrlist, new { @class = "form-control" }) 
    </div>
    <div style="margin-top:15px">
        <label>Yazar adı:</label>
        @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.yzrlist, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Basım Yılı:</label>
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Yayın Evi:</label>
        @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı:</label>
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
    </div>
    
    
    
    
    <div>
        <div style="margin-top:15px">
            <button class="btn btn-info" id="Btn1">Kitap Ekle</button>
        </div>

    </div>
</form> 