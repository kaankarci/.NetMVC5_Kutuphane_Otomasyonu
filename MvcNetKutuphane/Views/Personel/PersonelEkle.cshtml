@model MvcNetKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Personel adı:</label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PERSONEL, "", new { @style = "color:red" })
    </div>
    <div>
        <div style="margin-top:15px">
            <button class="btn btn-info" id="Btn1">Personel Ekle</button>
        </div>

    </div>
</form> 